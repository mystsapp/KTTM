                    <legend class="groupbox-border">Thông tin về thuế </legend>

                    <div class=" row">

                        <div class="col-md-2">
                            <label asp-for="KVCTPTC.LoaiHDGoc" class="control-label "></label>
                            @*<input asp-for="KVCTPTC.LoaiHDGoc" class="form-control form-control-sm" id="txtLoaiHDGoc" />*@
