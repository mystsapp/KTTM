                            <input asp-for="KVCTPTC.KyHieu" class="form-control form-control-sm" id="txtKyHieu" />
                            <span asp-validation-for="KVCTPTC.KyHieu" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
