                            </select>
                            <span asp-validation-for="KVCTPTC.TKNo" class="text-danger"></span>
                        </div>

                        <div class="col-md-8">
                            <label class="control-label">Tên tài khoãn</label>
                            <input class="form-control form-control-sm " value="@Model.TenTkNo" id="txtTenTkNo" />
                        </div>
