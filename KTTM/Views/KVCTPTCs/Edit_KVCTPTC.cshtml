                                    </select>*@
                                <input type="text" class="form-control form-control-sm" disabled />
                                <span asp-validation-for="KVCTPTC.MaKhCo" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label class="control-label ">Tên KH có</label>
                                <input type="text" class="form-control form-control-sm" value="Không có mã khách hàng" id="txtTenKhCo" disabled />
                            </div>

                        }
                    </div>

                    <div class=" row">
                        @if (Model.KVPTC.MFieu == "T")
                        {
                            <div class="col-md-2">
                                <label asp-for="KVCTPTC.NoQuay" class="control-label "></label>
                                @*<select asp-for="KVCTPTC.NoQuay" class="form-control form-control-sm " disabled
                                    asp-items="@(new SelectList(Model.Quays, "Quay", "Quay"))" id="ddlNoQuay">
                                    </select>*@
                                <input asp-for="KVCTPTC.NoQuay" class="form-control form-control-sm " readonly />
                                <span asp-validation-for="KVCTPTC.MaKhNo" class="text-danger"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="KVCTPTC.CoQuay" class="control-label "></label>
                                <select asp-for="KVCTPTC.CoQuay" class="form-control form-control-sm "
                                    asp-items="@(new SelectList(Model.Quays, "Quay", "Quay"))" id="ddlCoQuay">
                                </select>
                                <span asp-validation-for="KVCTPTC.CoQuay" class="text-danger"></span>
                            </div>

                        }
                        else
                        {
                            <div class="col-md-2">
                                <label asp-for="KVCTPTC.NoQuay" class="control-label "></label>
                                <select asp-for="KVCTPTC.NoQuay" class="form-control form-control-sm "
                                    asp-items="@(new SelectList(Model.Quays, "Quay", "Quay"))" id="ddlNoQuay">
                                </select>
                                <span asp-validation-for="KVCTPTC.MaKhNo" class="text-danger"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="KVCTPTC.CoQuay" class="control-label "></label>
                                @*<select asp-for="KVCTPTC.CoQuay" class="form-control form-control-sm " disabled
                                    asp-items="@(new SelectList(Model.Quays, "Quay", "Quay"))" id="ddlCoQuay">
                                    </select>*@
                                <input asp-for="KVCTPTC.CoQuay" class="form-control form-control-sm " readonly />
                                <span asp-validation-for="KVCTPTC.CoQuay" class="text-danger"></span>
                            </div>
                        }

