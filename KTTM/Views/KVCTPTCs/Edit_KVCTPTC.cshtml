                        <div class="col-md-11">
                            <label asp-for="KVCTPTC.DienGiaiP" class="control-label"></label>@*(<strong class="text-red">*</strong>)*@
                            <input asp-for="KVCTPTC.DienGiaiP" class="form-control form-control-sm text-uppercase" id="txtDienGiaiP" />
                            <span asp-validation-for="KVCTPTC.DienGiaiP" class="text-danger"></span>
                        </div>

                        <div class="col-md-1">
                            <label asp-for="KVCTPTC.HTTC" class="control-label"></label>
