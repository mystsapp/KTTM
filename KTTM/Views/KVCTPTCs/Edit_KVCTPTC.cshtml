                                <input type="text" class="form-control form-control-sm" id="txtTenKhNo" value="@Model.KVCTPTC.TenKH" />
                            </div>

                            <div class="col-md-2">
                                <label asp-for="KVCTPTC.MaKhCo" class="control-label "></label>
