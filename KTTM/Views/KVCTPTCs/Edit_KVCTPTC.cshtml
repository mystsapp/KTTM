                <i class="fas fa-minus"></i>
            </button>
            <a class="btn btn-tool" asp-action="BackIndex" asp-route-id="@Model.KVPTC.Id" asp-route-page="@Model.Page">
                <i class="fas fa-times"></i>
            </a>
        </div>
    </div>
    <div class="card-body p-0">

