@model KVCTPCTViewModel

@{
    ViewData["Title"] = "Edit";
}
<!-- Main content -->
@*<section class="content">*@

<!-- Default box -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-file text-info"></i> Điều chỉnh chi tiết phiếu - <span>@Model.KVPTC.SoCT</span></h3>

        <div class="card-tools">
