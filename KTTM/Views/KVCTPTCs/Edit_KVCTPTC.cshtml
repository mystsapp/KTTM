                            <input asp-for="KVCTPTC.SoTien" class="form-control form-control-sm " asp-format="{0:0,0}" readonly id="txtSoTien" />
                            <span asp-validation-for="KVCTPTC.SoTien" class="text-danger"></span>
                        </div>
                    </div>

                    <div class=" row">

                        <div class="col-md-4">
                            <label asp-for="KVCTPTC.TKNo" class="control-label"></label>
                            <!--select2-->
                            <select asp-for="KVCTPTC.TKNo" class="form-control form-control-sm select2"
                                    asp-items="@(new SelectList(Model.DmTks_TkNo, "Tkhoan", "TenTk"))" id="ddlTkNo">
