                            <label asp-for="KVCTPTC.Sgtcode" class="control-label"></label>
                            <input asp-for="KVCTPTC.Sgtcode" class="form-control form-control-sm" id="txtSgtcode" />
                            <span asp-validation-for="KVCTPTC.Sgtcode" class="text-danger"></span>
                        </div>
                        @if (Model.KVPTC.NgoaiTe == "VN")
                        {
                            <div class="col-md-2">
                                <label asp-for="KVCTPTC.SoVe" class="control-label"></label>
                                <input asp-for="KVCTPTC.SoVe" class="form-control form-control-sm" id="txtSoVe" />
                                <span asp-validation-for="KVCTPTC.SoVe" class="text-danger"></span>
                            </div>

                        }
                        else
                        {
                            <div class="col-md-2">
                                <label asp-for="KVCTPTC.SoVe" class="control-label"></label>
                                <input asp-for="KVCTPTC.SoVe" class="form-control form-control-sm" id="txtSoVe" disabled />
                                <span asp-validation-for="KVCTPTC.SoVe" class="text-danger"></span>
                            </div>

                        }

                    </div>

                    <div class=" row">

                        <div class="col-md-4">
                            <label asp-for="KVCTPTC.SoXe" class="control-label"></label>
                            <input asp-for="KVCTPTC.SoXe" class="form-control form-control-sm" id="txtSoXe" />
                            <span asp-validation-for="KVCTPTC.SoXe" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="KVCTPTC.CardNumber" class="control-label"></label>
