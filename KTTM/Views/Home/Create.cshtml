@model HomeViewModel

@using Microsoft.AspNetCore.Http
@using Data.Utilities
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Create";
    var user = HttpContextAccessor.HttpContext.Session.GetSingle<Data.Models_QLTaiKhoan.User>("loginUser");

}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm phiếu</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-route-strUrl="@Model.StrUrl" asp-action="DetailsRedirect">Danh sách phiếu</a></li>
                    <li class="breadcrumb-item active">Thêm phiếu</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file text-info"></i> Thêm phiếu</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">

            <form method="post" autocomplete="off" id="frmHomeCreate" enctype="multipart/form-data">
                <div class="pr-4 pl-4 text-sm">

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group row">

                        <div class="col-md-3">
                            <label asp-for="KVPCT.NgayCT" class="control-label"></label>@*(<strong class="text-red">*</strong>)*@
                            <input type="text" asp-for="KVPCT.NgayCT" class="form-control form-control-sm maskInput" asp-format="{0:dd/MM/yyyy}" id="txtNgayCT" />
                            <span asp-validation-for="KVPCT.NgayCT" class="text-danger"></span>
                        </div>


                        <div class="col-md-1">
                            <label asp-for="KVPCT.MFieu" class="control-label"></label>
                            <input asp-for="KVPCT.MFieu" class="form-control form-control-sm" id="txtMFieu" />
                            <span asp-validation-for="KVPCT.MFieu" class="text-danger"></span>
                        </div>

                        <div class="col-md-2">
                            <!-- qltour -->
                            <label asp-for="KVPCT.NgoaiTe" class="control-label"></label>
                            <select asp-for="KVPCT.NgoaiTe" class="form-control form-control-sm select2"
                                    asp-items="@(new SelectList(Model.Ngoaites, "MaNt", "MaNt"))" id="ddlNgoaiTe">
                            </select>
                            <span asp-validation-for="KVPCT.NgoaiTe" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="KVPCT.HoTen" class="control-label"></label>
                            <input asp-for="KVPCT.HoTen" class="form-control form-control-sm" id="txtHoTen" />
                            <span asp-validation-for="KVPCT.HoTen" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <!-- qltour -->
                            <label asp-for="KVPCT.Phong" class="control-label"></label>
                            <select asp-for="KVPCT.Phong" class="form-control form-control-sm input-sm select2"
                                    asp-items="@(new SelectList(Model.Phongbans, "Maphong", "Tenphong"))" id="ddlPhongBan">
                            </select>
                            <span asp-validation-for="KVPCT.Phong" class="text-danger"></span>
                        </div>

                    </div>

                   
                    <div class="form-group row">

                        <div class="col-md-9">
                            <label asp-for="KVPCT.DonVi" class="control-label"></label>
                            <input asp-for="KVPCT.DonVi" class="form-control form-control-sm" id="txtDonVi" />
                            <span asp-validation-for="KVPCT.DonVi" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="KVPCT.LapPhieu" class="control-label "></label>
                            <input readonly asp-for="KVPCT.LapPhieu" class="form-control form-control-sm" id="txtLapPhieu" />
                            <span asp-validation-for="KVPCT.LapPhieu" class="text-danger"></span>
                        </div>

