@model TonQuyViewModel

<div class="row form-group">
    <div class="col-md-12">
        <div class="rounded p-2 text-sm" style="padding-bottom:5px; background-color: aliceblue;" id="search">
            <div class=" row form-group text-sm">

                <div class="col-md-2">
                    <label>Từ ngày</label>
                </div>

                <div class="col-md-3">
                    <input class="form-control form-control-sm maskInput" id="txtTuNgay_TonQuy" value="@ViewBag.searchFromDate" />

                </div>
                <div class="col-md-2">
                    <label>Đến ngày</label>
                </div>

                <div class="col-md-3">
                    <input class="form-control form-control-sm maskInput" id="txtDenNgay_TonQuy" value="@ViewBag.searchToDate" />

                </div>

                <div class="col-md-2">
                    <button type="button" class="btn btn-primary btn-sm" id="btnSearchTonQuy"><i class="fas fa-search"></i></button>
                </div>
            </div>

        </div>
    </div>
</div>

<div style="overflow-x:auto; overflow-y:auto; height: 300px">
    <table class="table mytable text-nowrap text-sm" id="tonQuyTbl">
        <thead>
            <tr class="table-info">

                <th>Ngày CT</th>
                <th>Loại tiền</th>
                <th>Số tiền</th>
                <th>Số tiền NT</th>
                <th>Tỷ giá</th>

            </tr>
        </thead>
        <tbody>
            @if (Model.TonQuies != null)
            {
                @foreach (var item in Model.TonQuies)
                {

                    <tr class="tonquies-cursor-pointer ">

                        <td class="tdVal_Supplier" data-id="@item.Id">@Html.DisplayFor(m => item.NgayCT)</td>
                        <td class="tdVal_Supplier" data-id="@item.Id">@Html.DisplayFor(m => item.LoaiTien)</td>
                        <td class="tdVal_Supplier" data-id="@item.Id">@Html.DisplayFor(m => item.SoTien)</td>
                        <td class="tdVal_Supplier" data-id="@item.Id">@Html.DisplayFor(m => item.SoTienNT)</td>
                        <td class="tdVal_Supplier" data-id="@item.Id">@Html.DisplayFor(m => item.TyGia)</td>

                    </tr>

                }
            }
        </tbody>
    </table>

</div>
