@model TT621ViewModel

@{
    ViewData["Title"] = "KhongTC_141";
}


<!-- CapNhatCT_TT modal-->
<div class="modal fade" id="CapNhatCT_TT_Modal" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-xl">

        <div class="modal-content ">
            <div class="modal-header p-0 pl-1">
                <h4 class="modal-title"><i class="fas fa-file text-info"></i> Cập nhật chi tiết thanh toán @*- <span id="hidLoaiPhieu"></span>*@</h4>
                <button type="button" class="close pr-4 pt-3" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body CapNhatCT_TT_Body p-0">
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- CapNhatCT_TT modal-->
<!-- ThemMoiCT_TT modal-->
<div class="modal fade" id="ThemMoiCT_TT_Modal" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-xl">

        <div class="modal-content ">
            <div class="modal-header p-0 pl-1">
                <h4 class="modal-title"><i class="fas fa-file text-info"></i> Thêm chi tiết thanh toán @*- <span id="hidLoaiPhieu"></span>*@</h4>
                <button type="button" class="close pr-4 pt-3" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body ThemMoiCT_TT_Body p-0">
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- ThemMoiCT_TT modal-->
<!-- Content Header (Page header) -->
<section class="content-header p-0">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm phiếu TT - <span>@Model.KVPCT.MFieu</span></h1>
                <input type="hidden" value="@Model.KVPCT.SoCT" id="kVPCTId_TT621CreateView" />
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-route-soCT="@Model.KVCTPCT.KVPCTId" asp-route-page="@Model.Page" asp-action="Index">Danh sách phiếu</a></li>
                    <li class="breadcrumb-item active">Thanh toán tạm ứng</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file text-info"></i> Thanh toán tạm ứng : thực chi bằng tạm ứng</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">

            <div class=" row p-2">

                <input type="hidden" asp-for="KVCTPCT.Id" id="hidKVCTPCTId" />

                <div class="col-md-2">
                    <label>Chọn nhân viên đã tạm ứng</label>
                </div>
                <div class="col-md-1">
                    <div class="input-group">

                        <input class="form-control form-control-sm" id="txtMaKh">
                        <span class="input-group-btn">
                            <a href="javascript:;" class="btn btn-default btn-sm" id="btnKhSearch" data-name="maKhCo" title="Tìm thông tin khách hàng"><i class="fa fa-search"></i></a>
                        </span>

                    </div>
                </div>

                <div class="col-md-4">
                    <input class="form-control form-control-sm" id="txtTenKH">
                </div>

                <div class="col-md-2 float-right">
                    <label >Ngày thanh toán</label>
                </div>
                <div class="col-md-2">

                    <input class="form-control form-control-sm " id="txtNgayThanhToan" value="@DateTime.Now.ToString("dd/MM/yyyy")" readonly />
                </div>

            </div>

            <div class=" row p-2">
                <div class="col-md-3">
                    <label class="control-label text-blue">Chọn 1 phiếu tạm ứng sau để thanh toán</label>
                </div>
                <div class="col-md-9">
                    <input class="form-control form-control-sm " id="txtCommentText" asp-for="CommentText" />
                </div>

            </div>

            <div class="pr-2 pl-2">
                <table class="table mytable text-nowrap text-sm" id="tamUngTble">
                    <thead>
                        <tr class="table-info">

                            <th>@Html.DisplayNameFor(m => m.TamUngs.FirstOrDefault().SoCT)</th>
                            <th>@Html.DisplayNameFor(m => m.TamUngs.FirstOrDefault().NgayCT)</th>
                            <th>@Html.DisplayNameFor(m => m.TamUngs.FirstOrDefault().PhieuChi)</th>
                            <th>@Html.DisplayNameFor(m => m.TamUngs.FirstOrDefault().DienGiai)</th>
                            <th>@Html.DisplayNameFor(m => m.TamUngs.FirstOrDefault().LoaiTien)</th>
                            <th>@Html.DisplayNameFor(m => m.TamUngs.FirstOrDefault().ConLaiNT)</th>
                            <th>@Html.DisplayNameFor(m => m.TamUngs.FirstOrDefault().ConLai)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.TamUngs != null)
                        {
                            @foreach (var item in Model.TamUngs)
                            {

                                <tr class="tamUngTr" data-id="@item.Id">

                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.SoCT)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.NgayCT.HasValue ? item.NgayCT.Value.ToString("dd/MM/yyyy") : "")</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.PhieuChi)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.DienGiai)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.LoaiTien)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.ConLaiNT.ToString("N0"))</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.ConLai.ToString("N0"))</td>

                                </tr>

                            }
                        }
                    </tbody>
                </table>

            </div>

            <!-- Chi tiet thanh toan -->
            <div class=" row p-2">

                <div class="col-md-6 text-sm">
                    <label class="control-label text-blue">Chi tiết thanh toán </label>

                    <input type="hidden" id="hidTamUngId" />
                    <button type="button" class="btn btn-outline-secondary btn-sm" title="Thêm mới CT" id="btnThemMoiCT" disabled><i class="fas fa-plus text-blue"></i></button>

                    <input type="hidden" id="hidTT621Id" />
                    <button type="button" class="btn btn-outline-secondary btn-sm" title="Cập nhật CT" id="btnCapNhatCT" disabled><i class="fas fa-edit text-blue"></i></button>
                    <button type="button" class="btn btn-outline-danger btn-sm" title="Xoá CT" id="btnDelete" disabled><i class="fas fa-trash-alt text-blue"></i></button>
                </div>

                <div class="col-md-6 text-sm text-right">
                    <button type="button" class="btn btn-outline-dark btn-sm" title="Thanh toán không kết chuyển"><i class="fas fa-folder text-warning"></i></button>
                    <button type="button" class="btn btn-outline-dark btn-sm" title="Kết chuyển" disabled id="btnKetChuyen"><i class="fas fa-check"></i></button>
                </div>

            </div>

            <div class="pr-2 pl-2" style="overflow-x:auto;">
                <table class="table mytable text-nowrap text-sm" id="tt621Tbl">
                    <thead>
                        <tr class="table-info">

                            <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().DienGiai)</th>
                            <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().DienGiaiP)</th>
                            <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().SoTienNT)</th>
                            <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().LoaiTien)</th>
                            <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().TyGia)</th>
                            <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().SoTien)</th>
                            <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().TKNo)</th>
                            <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().MaKhNo)</th>
                            <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().TKCo)</th>
                            <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().MaKhCo)</th>
                            @*   <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().Sgtcode)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().HTTC)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().GhiSo)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().MsThue)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().NgayCTGoc)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().LoaiHDGoc)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().SoCTGoc)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().KyHieuHD)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().VAT)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().DSKhongVAT)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().BoPhan)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().NoQuay)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().CoQuay)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().SoXe)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().TenKH)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().DiaChi)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().KyHieu)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().MauSoHD)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().MatHang)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().DieuChinh)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().LapPhieu)</th>
                                <th>@Html.DisplayNameFor(m => m.TT621s.FirstOrDefault().HoaDonDT)</th>*@
                            <th>Phiếu TC</th>
                        </tr>
                    </thead>
                    <tbody id="ctThanhToanBody">
                    </tbody>
                </table>

            </div>
        </div>
    </div>

    <div class=" pt-1 pb-1">
        <a class="btn btn-success btn-sm" asp-action="Index" asp-controller="Home" asp-route-page="@Model.Page" asp-route-soCT="@Model.KVCTPCT.KVPCTId"><i class="fas fa-backward "></i> Back</a>
    </div>
</section>

@section Scripts{
    @*<script src="~/js/Admin/Home/indexController.js"></script>*@
    <!--mustache-->
    <script src="~/lib/mustache.min.js"></script>
    <script src="~/js/Admin/TT621/createController.js"></script>
    <script id="data-template" type="x-tmpl-mustache">

        <tr class="trTT621" data-id="{{Id}}" data-phieutc="{{PhieuTC}}">

            <td>{{DienGiai}}</td>
            <td>{{DienGiaiP}}</td>
            <td>{{SoTienNT}}</td>
            <td>{{LoaiTien}}</td>
            <td>{{TyGia}}</td>
            <td>{{SoTien}}</td>
            <td>{{TKNo}}</td>
            <td>{{MaKhNo}}</td>
            <td>{{TKCo}}</td>
            <td>{{MaKhCo}}</td>
            <td>{{PhieuTC}}</td>

        </tr>
    </script>

    <script>
        function confirmDelete(uniqueId, isDeleteClicked) {
            var deleteSpan = 'deleteSpan_' + uniqueId;
            var confirmDeleteSpan = 'confirmDeleteSpan_' + uniqueId;

            if (isDeleteClicked) {
                $('#' + deleteSpan).hide();
                $('#' + confirmDeleteSpan).show();
            } else {
                $('#' + deleteSpan).show();
                $('#' + confirmDeleteSpan).hide();
            }
        }
    </script>
}
