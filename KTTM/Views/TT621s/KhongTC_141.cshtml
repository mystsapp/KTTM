<form asp-action="KhongTC_141" method="get" id="frm_KhongTC_141">
    <input type="hidden" name="kvpctId" id="hidKvpctId" />
    <input type="hidden" name="strUrl" id="hidStrUrl" />
    <input type="hidden" name="page" id="hidPage" />
    <input type="hidden" name="maKh" id="hidMaKh" />
    <input type="hidden" name="tenKh" id="hidTenKh" />
</form>
@section Scripts{
    @*<script src="~/js/Admin/Home/indexController.js"></script>*@
    <!--mustache-->
    <script src="~/lib/mustache.min.js"></script>
    <script src="~/js/Admin/TT621/createController.js"></script>

    <script>
        $('#btnKhSearch').click(function () {
            debugger
            var maKhtext = maKhtext = $('#txtMaKh').val();
            var kvpctId = '';
            if ('@Model.KVPCT.SoCT' != null) {
                kvpctId = '@Model.KVPCT.SoCT';
            }
            var strUrl = '@Model.StrUrl';
            var page = '@Model.Page';

            KhachHangSearch(maKhtext, kvpctId, strUrl, page);
        })

        $('#txtMaKh').blur(function () {

            code = $(this).val();

            $.ajax({
                url: '/KVCTPCTs/GetKhachHangs_By_Code',
                type: 'GET',
                data: { code: code },
                dataType: 'json',
                success: function (response) {
                    if (response.status) {
                        var data = response.data;
                        // console.log(data);

                        //$('#txtMaKh').val(data.code);
                        //$('#txtTenKh').val(data.name);

                        // submit qua KhongTC_141 <-> frm_KhongTC_141
                        $('#hidKvpctId').val('@Model.KVPCT.SoCT');
                        $('#hidStrUrl').val('@Model.StrUrl');
                        $('#hidPage').val('@Model.Page');
                        $('#hidMaKh').val(data.code);
                        $('#hidTenKh').val(data.name);

                        $('#frm_KhongTC_141').submit();
                    }
                    else {// search ko co KH nao het => ...

                        $('#txtMaKh').val('');
                        $('#txtTenKh').val('');
                    }
                }
            });

        })

        function KhachHangSearch(code, kvpctId, strUrl, page) {
            url = '/TT621s/GetKhachHangs_HDVATOB_By_Code_KhongTC';
            $.get(url, { code: code, kvpctId: kvpctId, strUrl: strUrl, page: page }, function (data) {

                $('#khachHang_Modal').modal('show');
                $('.khachHang_Modal_Body').html(data);
                $('#khachHang_Modal').draggable();

            });
        }

    </script>

    <script id="data-template" type="x-tmpl-mustache">

        <tr class="trTT621" data-id="{{Id}}" data-phieutc="{{PhieuTC}}">

            <td>{{DienGiai}}</td>
            <td>{{DienGiaiP}}</td>
            <td>{{SoTienNT}}</td>
            <td>{{LoaiTien}}</td>
            <td>{{TyGia}}</td>
            <td>{{SoTien}}</td>
            <td>{{TKNo}}</td>
            <td>{{MaKhNo}}</td>
            <td>{{TKCo}}</td>
            <td>{{MaKhCo}}</td>
            <td>{{PhieuTC}}</td>

        </tr>
    </script>

    <script>
        function confirmDelete(uniqueId, isDeleteClicked) {
            var deleteSpan = 'deleteSpan_' + uniqueId;
            var confirmDeleteSpan = 'confirmDeleteSpan_' + uniqueId;

            if (isDeleteClicked) {
                $('#' + deleteSpan).hide();
                $('#' + confirmDeleteSpan).show();
            } else {
                $('#' + deleteSpan).show();
                $('#' + confirmDeleteSpan).hide();
            }
        }
    </script>
}
